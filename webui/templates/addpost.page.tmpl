{{template "base" .}}

{{define "title"}}Create post{{end}}

{{define "main"}}
    
    <div>
        <div class="post">
            <form id="pform" name="pform" onsubmit="return validatePost()" onclick="CheckValidatePost()">
                <input  id="invisible" name="authorID" value="{{.Session.User.ID}}"></input>
                <input type="text" id="PostTopic" name="theme" placeholder="Header"><br><br>
                <textarea id="textarea_newpost" name="content" placeholder="Enter your text here..."></textarea><br><br>
                <div id="choosepostcategory">
                <label for="checkbox">Choose tags:</label><br>
                {{range .Categories}}
                    <input type="checkbox" id = {{.ID}} class="categories" name="categoriesID"  value={{.ID}}>
                    <label for="cats">{{.Name}}</label><br>
                {{end}}
                </div>
                <button id="submitpost" class="signinupformbutton" formaction="/post/create" formmethod="post" onclick="Up()">Create post</button>
            </form>
        </div>
    </div>
{{end}}   